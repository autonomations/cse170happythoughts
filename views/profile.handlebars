<!doctype html>

<html>
<head>
	<title>{{title}}</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<!-- this is a comment in HTML -->
      
</head>

<body>
	<div class="container">
		
	    <div class="navbar navbar-default" role="navigation">
	        <div class="navbar-header">
	          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	            <span class="sr-only">Toggle navigation</span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </button>
	          <a class="navbar-brand" href="#">Happy Thoughts</a>
	        </div>
	        <div class="navbar-collapse collapse">
	          <ul class="nav navbar-nav">
	          	{{#each navbar}}
	            	<li><a href="/{{ navbar-item }}">{{ navbar-item }}</a></li>
	            {{/each}}
	          </ul>
	        </div><!--/.nav-collapse -->
	     </div>

	     {{#with images.[1]}}
	     <div class="container">
	     	<div class="row">
	     		<h1 class="well"> {{name}} </h1>
	     	</div>
	     	<div class="row">
     
		    	
		    		<div class="col-xs-4">
		    			<img src="{{ imageURL }}" class="img-responsive">
		    		</div>
            	
	            	
            	<div class="col-xs-offset-1 col-xs-4">
            		<h2> {{name}}</h2>
            		<p> {{description}} </p>
            		<button type="button" style="margin-top: 30px;" class="btn-lg btn-primary col-xs-12" style="margin-bottom: 30px;"> Next </button>
            	</div>
            	{{/with}}
	            	


			
	     	</div>


	     </div>

	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/base.js"></script>
</body>
</html>
